%body
  .default-container
    = render 'topheader'
    %main.white{role: "main"}
      %h2.top-scroll
        = image_tag "products_top-image.png", class: 'topscroll-image'
      %section.pickup__container
        %h2.pickup__head ピックアップカテゴリー
        %section.pickup__head__container.clearfix

      %section.pickup__container
        %h2.pickup__head ピックアップブランド
        %section.pickup__head__container.clearfix
          %h3.pickup__head-item
            %a{href: "##"} シャネル 新着アイテム
          .items-box.clearfix
            - @chanel.each do |chanelitem|
              %section.items-box__contents
                %a{href: "/products/#{chanelitem.id}"}
                  %figure.items-box__photo
                    .lazyloaded{:style => "background-image: url(#{chanelitem.images[0].image})"}
                      - if chanelitem.product_state_id ==2
                        = image_tag('sold.png', :class => "sold-image-index")
                  .items-box__body
                    %h3.items-box__name.font-1
                      = chanelitem.title
                    .items-box__num.clearfix
                      .items-box__price.font-2
                        = chanelitem.price
                      .iine-wrapper
                        %span.fa.fa-heart.like-btn-index
                          %span.iinemaenum
                            = Favorite.where(product_id: chanelitem.id).count
                      %p.items-box__tax (税込)
            .view-all
              %a{href: "#"} すべての商品を見る
